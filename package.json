{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "gg-code",
  "version": "1.0.0",
  "description": "GG CODE - AI-Powered Code Editor CLI Tool",
  "private": true,
  "main": "dist/index.js",
  "bin": {
    "ggcode": "./bin/ggcode.js"
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "npx ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:tools": "node scripts/test-tools-simple.js",
    "test:mock": "node scripts/test-with-mock.js",
    "test:validation": "jest tests/tools-validation.test.ts",
    "test:api": "node scripts/test-api-mode.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "npm run clean:dist && node scripts/clean.js",
    "clean:dist": "node -e \"const fs=require('fs');fs.existsSync('dist')&&fs.rmSync('dist',{recursive:true,force:true});console.log('✓ dist 已清理')\"",
    "link": "npm run build && npm link",
    "unlink": "npm unlink -g ggcode",
    "package": "node scripts/package-simple.js",
    "build:exe": "node scripts/build-exe-simple.js"
  },
  "keywords": [
    "cli",
    "gg-code",
    "code-editor",
    "ai",
    "assistant",
    "typescript",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/gg-code"
  },
  "bugs": {
    "url": "https://github.com/your-username/gg-code/issues"
  },
  "homepage": "https://github.com/your-username/gg-code#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "dotenv": "^16.3.1",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5",
    "js-yaml": "^4.1.0",
    "ora": "^5.4.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/inquirer": "^8.2.5",
    "@types/jest": "^29.5.6",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.18.68",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "archiver": "^6.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "pkg": {
    "targets": [
      "node16-win-x64",
      "node16-linux-x64",
      "node16-macos-x64"
    ],
    "outputPath": "dist-exe",
    "assets": [
      "prompts/**/*",
      "bin/**/*",
      "config/**/*"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}
